{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "skill_analyze_trends",
  "type": "object",
  "required": ["platform"],
  "properties": {
    "platform": {
      "type": "string",
      "enum": ["youtube", "tiktok", "twitter"],
      "description": "Platform to analyze trends for"
    },
    "options": {
      "type": "object",
      "properties": {
        "limit": { "type": "integer", "minimum": 1, "maximum": 100, "default": 10 },
        "min_confidence": { "type": "number", "minimum": 0, "maximum": 1 },
        "time_range_hours": { "type": "integer", "minimum": 1, "maximum": 168 }
      }
    }
  }
}
