{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Spec Schema",
  "type": "object",
  "description": "Schema for functional and technical specs.",
  "required": ["title", "scope", "requirements", "acceptance_criteria", "status"],
  "properties": {
    "title": { "type": "string" },
    "scope": { "type": "string" },
    "status": {
      "type": "string",
      "enum": ["draft", "reviewed", "approved", "superseded"]
    },
    "requirements": {
      "type": "array",
      "items": { "type": "string" }
    },
    "acceptance_criteria": {
      "type": "array",
      "items": { "type": "string" }
    },
    "risks": {
      "type": "array",
      "items": { "type": "string" }
    },
    "traceability": {
      "type": "array",
      "items": { "type": "string" }
    }
  }
}
